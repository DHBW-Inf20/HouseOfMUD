{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es2017"
    ],
    "baseUrl": "./",
    "importHelpers": true,
    "noEmit": true,
    "typeRoots":
      ["node_modules/@types","src/types/*"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "typedocOptions": {
    "entryPoints": ["src/"],
    "categorizeByGroup": true,
    "entryPointStrategy": "expand",
    "out": "../TypeDoc-Documentation/Frontend/",
    "name": "Frontend",
    "readme": "readme-typedoc.md",
    "media": "typedoc-media/"
  }
}